@model TESTWebApp.Models.MiddleWorkItemViewModel

@section LogOutBtn{
    <button type="button" class="btn btn-danger fw-bold styleBorderRadius" onclick="location.href='@Url.Action("Logout","Home")'">ログアウト</button>
}
@section DispLoginUser{
    <b class="navbar-brand">@Model.LoginUserName さん、こんにちは</b>
}

<div class="chuuou">
    <div class="container body-content">

        <br />
        <div class="chuuou">
            <h2>作業項目（中項目）追加</h2>
        </div>
        @{
            if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
            {
                <br />
                <div class="chuuou">
                    <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
                        <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                        </symbol>
                    </svg>
                    <div class="alert alert-danger d-flex align-items-center" role="alert">
                        <svg class="bi flex-shrink-0 me-2" width="24" height="24"><use xlink:href="#exclamation-triangle-fill" /></svg>
                        <div>
                            @ViewBag.ErrorMessage
                        </div>
                    </div>
                </div>
            }
        }
        @{
            if (!string.IsNullOrWhiteSpace(ViewBag.OperationMessage))
            {
                <br />
                <div class="chuuou">
                    <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
                        <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                        </symbol>
                    </svg>
                    <div class="alert alert-success d-flex align-items-center" role="alert">
                        <svg class="bi flex-shrink-0 me-2" width="24" height="24"><use xlink:href="#check-circle-fill" /></svg>
                        <div>
                            @ViewBag.OperationMessage
                        </div>
                    </div>
                </div>
            }
        }

        <form asp-action="CreateMiddleWorkItem" method="POST">
            <div class="chuuou">
                <input class="inputForm" id="workItemName" asp-for="NewMiddleWorkItemName" />
                <input type="hidden" asp-for="MajorWorkItemId" value="@Model.MajorWorkItemId" />
                <input type="hidden" asp-for="MajorWorkItemName" value="@Model.MajorWorkItemName" />
            </div>

            <br />
            <div class="chuuou">
                <br />
                <div class="form_conf">
                    <div class='btn-toolbar' role="toolbar">
                        <div class="btn-group" role="group">
                            <div class="d-grid gap-2">
                                <button id="workBtn" class="btn customGreenBtn" type="submit" name="CountUp">作業項目を登録する</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <br />
        <div class="chuuou">
            <button class="btn customBulueBtn" onclick="location.href='@Url.Action("index","MiddleWorkItem", new { id = Model.MajorWorkItemId, name = Model.MajorWorkItemName })'">戻る</button>
        </div>
    </div>
</div>
